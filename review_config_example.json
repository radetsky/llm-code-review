{
  "llm": {
    "model": "gpt-4",
    "base_url": "https://api.openai.com/v1",
    "api_key_env": "OPENAI_API_KEY",
    "timeout": 30,
    "max_retries": 3,
    "fallback_model": "gpt-3.5-turbo"
  },
  "review": {
    "critical_rules": [
      "hardcoded_credentials",
      "sql_injection",
      "xss_vulnerabilities",
      "unsafe_functions",
      "file_operations_without_validation"
    ],
    "warning_rules": [
      "code_style_violations",
      "potential_bugs",
      "performance_issues",
      "missing_error_handling",
      "documentation_gaps"
    ],
    "file_extensions": [".py", ".js", ".ts", ".jsx", ".tsx", ".java", ".cpp", ".c", ".h", ".go"],
    "exclude_patterns": [
      "node_modules/",
      ".git/",
      "__pycache__/",
      "*.min.js",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "prompt": {
    "custom_prompt": null,
    "custom_critical_rules": ["memory leaks", "race conditions"],
    "custom_warnings": ["deprecated API usage"],
    "custom_suggestions": ["consider async patterns"],
    "additional_instructions": "Focus on thread safety"
  },
  "output": {
    "format": "text",
    "show_context": true,
    "max_context_lines": 3
  },
  "fallback": {
    "enable_static_analysis": true,
    "allow_commit_on_unavailable": true
  }
}